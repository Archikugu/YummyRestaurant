@model List<YummyRestaurant.Application.DTOs.FeatureDTOs.ResultFeatureDto>
@{
    ViewData["Title"] = "Öne Çıkanlar Listesi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<script src="~/Otika/assets/js/page/components-sweetalert.js"></script>

<script>
    function deleteFeature(id, title) {
        Swal.fire({
            title: 'Silmek istediğinize emin misiniz?',
            text: "'" + title + "' başlıklı öne çıkan alanını silmek üzeresiniz. Bu işlem geri alınamaz!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Evet, sil!',
            cancelButtonText: 'İptal'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Admin/Feature/Delete/" + id;
            }
        })
    }
</script>

<div class="row">
    <div class="col-12 col-md-12 col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4>Öne Çıkanlar Listesi</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-md">
                        <tr>
                            <th>#</th>
                            <th>Resim</th>
                            <th>Başlık</th>
                            <th>Alt Başlık</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>
                                    <img src="@Url.Content(item.ImageUrl)" width="50" height="50" style="object-fit:cover; border-radius:50%" />
                                </td>
                                <td>@item.Title</td>
                                <td>@item.SubTitle</td>
                                <td>
                                    @if(item.IsActive)
                                    {
                                         <div class="badge badge-success">Aktif</div>
                                    }
                                    else
                                    {
                                         <div class="badge badge-danger">Pasif</div>
                                    }
                                </td>
                                <td>
                                    <button onclick="deleteFeature(@item.Id, '@item.Title')" class="btn btn-outline-danger">Sil</button>
                                    <a href="/Admin/Feature/Update/@item.Id" class="btn btn-outline-success">Güncelle</a>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
                <br />
                <a href="/Admin/Feature/Create" class="btn btn-outline-primary" style="float: left;">Yeni Öne Çıkan Ekle</a>
                <br /><br />
            </div>
        </div>
    </div>
</div>
