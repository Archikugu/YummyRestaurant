@model List<YummyRestaurant.Application.DTOs.RestaurantEventDTOs.ResultRestaurantEventDto>
@{
    ViewData["Title"] = "Etkinlik Listesi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<script src="~/Otika/assets/js/page/components-sweetalert.js"></script>

<script>
    function deleteEvent(id, name) {
        Swal.fire({
            title: 'Silmek istediğinize emin misiniz?',
            text: "'" + name + "' etkinliğini silmek üzeresiniz. Bu işlem geri alınamaz!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Evet, sil!',
            cancelButtonText: 'İptal'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Admin/RestaurantEvent/Delete/" + id;
            }
        })
    }
</script>

<div class="row">
    <div class="col-12 col-md-12 col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4>Etkinlik Listesi</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-md">
                        <tr>
                            <th>#</th>
                            <th>Görsel</th>
                            <th>Başlık</th>
                            <th>Fiyat</th>
                            <th>Açıklama</th>
                            <th>İşlemler</th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>
                                    <img src="@item.ImageUrl" alt="" style="width:70px; height:50px; border-radius:5px; object-fit:cover;" />
                                </td>
                                <td>@item.Title</td>
                                <td>@item.Price.ToString("C2")</td>
                                <td>@(item.Description.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)</td>
                                <td>
                                    <button onclick="deleteEvent(@item.Id, '@item.Title')" class="btn btn-outline-danger">Sil</button>
                                    <a href="/Admin/RestaurantEvent/Update/@item.Id" class="btn btn-outline-success">Güncelle</a>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
                <br />
                <a href="/Admin/RestaurantEvent/Create" class="btn btn-outline-primary" style="float: left;">Yeni Etkinlik Ekle</a>
                <br /><br />
            </div>
        </div>
    </div>
</div>
