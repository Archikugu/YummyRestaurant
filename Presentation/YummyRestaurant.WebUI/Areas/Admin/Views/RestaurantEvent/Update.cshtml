@model YummyRestaurant.Application.DTOs.RestaurantEventDTOs.UpdateRestaurantEventDto
@{
    ViewData["Title"] = "Etkinliği Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12 col-md-12 col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4>Etkinliği Güncelle</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label>Etkinlik Başlığı</label>
                        <input type="text" asp-for="Title" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Fiyat</label>
                        <input type="text" asp-for="Price" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Görsel URL</label>
                        <input type="text" asp-for="ImageUrl" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Video URL (Opsiyonel)</label>
                        <input type="text" asp-for="VideoUrl" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Açıklama</label>
                        <textarea asp-for="Description" class="form-control" rows="5" style="height:150px"></textarea>
                    </div>
                    <button class="btn btn-outline-success"><i class="fas fa-sync-alt"></i> Güncelle</button>
                    <a href="/Admin/RestaurantEvent/Index" class="btn btn-outline-secondary">İptal</a>
                </form>
            </div>
        </div>
    </div>
</div>
