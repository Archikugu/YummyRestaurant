@model YummyRestaurant.Application.DTOs.PhotoGalleryDTOs.CreatePhotoGalleryDto
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Fotoğraf Girişi</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Fotoğraf Ekleme Sayfası</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="tittle">Fotoğraf Başlığı</label>
                                <input type="text" class="form-control" asp-for="Title" id="tittle" placeholder="Fotoğraf Başlığını Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="imageUrl">Resim URL</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="imageUrl" placeholder="Resim URL Giriniz">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Fotoğrafı Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
