@model YummyRestaurant.Application.DTOs.CategoryDTOs.GetByIdCategoryDto
@{
    ViewData["Title"] = "Kategori Güncelleme Sayfası";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Kategori İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Kategori Güncelleme Sayfası</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <label for="categoryName">Kategori Adını Giriniz</label>
                                <input type="text" class="form-control" asp-for="Name" id="categoryName" placeholder="Kategori Adı">
                            </div>
                            <div class="form-group">
                                <label for="categoryDescription">Kategori Açıklamasını Giriniz</label>
                                <input type="text" class="form-control" asp-for="Description" id="categoryDescription" placeholder="Kategori Açıklaması">
                            </div>
                            <div class="form-group">
                                <label for="categoryStatus">Kategori Durumu</label>
                                <div class="custom-control custom-switch">
                                    <input type="checkbox" class="custom-control-input" asp-for="IsActive" id="categoryStatus">
                                    <label class="custom-control-label" for="categoryStatus"> Pasif / Aktif</label>
                                </div>
                            </div>
                            <button class="btn btn-success"><i class="fas fa-sync"></i> Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
