@model YummyRestaurant.Application.DTOs.CategoryDTOs.CreateCategoryDto
@{
    ViewData["Title"] = "Yeni Kategori Girişi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Kategori İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Kategori Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="categoryName">Kategori Adını Giriniz</label>
                                <input type="text" class="form-control" asp-for="Name" id="categoryName" placeholder="Kategori Adı">
                            </div>
                            <div class="form-group">
                                <label for="categoryDescription">Kategori Açıklamasını Giriniz</label>
                                <input type="text" class="form-control" asp-for="Description" id="categoryDescription" placeholder="Kategori Açıklaması">
                            </div>
                            <button class="btn btn-primary"><i class="fas fa-save"></i> Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
