@model YummyRestaurant.Application.DTOs.ProductDTOs.GetByIdProductDto
@{
    ViewData["Title"] = "Ürün Güncelleme";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12 col-md-12 col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4>Ürün Güncelleme Sayfası</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label for="productName">Ürün Adı</label>
                        <input type="text" class="form-control" asp-for="Name" id="productName">
                    </div>
                    <div class="form-group">
                        <label for="categoryId">Kategori</label>
                        @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.Categories, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="price">Fiyat</label>
                        <input type="text" class="form-control" asp-for="Price" id="price">
                    </div>
                    <div class="form-group">
                        <label for="imageUrl">Resim URL</label>
                        <input type="text" class="form-control" asp-for="ImageUrl" id="imageUrl">
                    </div>
                    <div class="form-group">
                        <label for="description">Açıklama</label>
                        <textarea class="form-control" asp-for="Description" rows="5" style="height:100px"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="productStatus">Ürün Durumu</label>
                        <div class="custom-control custom-switch">
                            <input type="checkbox" class="custom-control-input" asp-for="IsActive" id="productStatus">
                            <label class="custom-control-label" for="productStatus">Pasif / Aktif</label>
                        </div>
                    </div>

                    <button class="btn btn-success"><i class="fas fa-sync"></i> Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>
