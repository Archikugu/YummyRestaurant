@model YummyRestaurant.Application.DTOs.ServiceDTOs.UpdateServiceDto
@{
    ViewData["Title"] = "Neden Biz? Maddesini Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12 col-md-12 col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4>Neden Biz? Maddesini Güncelle</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label>Başlık</label>
                        <input type="text" asp-for="Title" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>İkon (CSS Class)</label>
                        <input type="text" asp-for="IconUrl" class="form-control" placeholder="Örn: bi bi-shop" />
                        <small class="form-text text-muted">Bootstrap Icons veya FontAwesome sınıflarını kullanabilirsiniz.</small>
                    </div>
                    <div class="form-group">
                        <label>Açıklama</label>
                        <textarea asp-for="Description" class="form-control" rows="3" style="height:100px"></textarea>
                    </div>
                    <button class="btn btn-outline-success"><i class="fas fa-sync-alt"></i> Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>
