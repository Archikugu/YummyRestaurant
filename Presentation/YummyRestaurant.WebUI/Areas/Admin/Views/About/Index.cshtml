@model List<YummyRestaurant.Application.DTOs.AboutDTOs.ResultAboutDto>
@{
    ViewData["Title"] = "Hakkımızda Yazısı Listesi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<script src="~/Otika/assets/js/page/components-sweetalert.js"></script>

<script>
    function deleteAbout(id) {
        Swal.fire({
            title: 'Silmek istediğinize emin misiniz?',
            text: "Bu hakkımızda yazısını silmek üzeresiniz. Bu işlem geri alınamaz!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Evet, sil!',
            cancelButtonText: 'İptal'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Admin/About/Delete/" + id;
            }
        })
    }
</script>

<div class="row">
    <div class="col-12 col-md-12 col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4>Hakkımızda Yazısı Listesi</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-md">
                        <tr>
                            <th>#</th>
                            <th>Görsel</th>
                            <th>Başlık</th>
                            <th>Açıklama</th>
                            <th>İşlemler</th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>
                                    <img src="@Url.Content(item.ImageUrl)" width="50" height="50" style="object-fit:cover; border-radius:50%" />
                                </td>
                                <td>@item.Title</td>
                                <td>@item.Description.Substring(0, item.Description.Length > 50 ? 50 : item.Description.Length)...</td>
                                <td>
                                    <button onclick="deleteAbout(@item.Id)" class="btn btn-outline-danger">Sil</button>
                                    <a href="/Admin/About/Update/@item.Id" class="btn btn-outline-success">Güncelle</a>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
                <br />
                <a href="/Admin/About/Create" class="btn btn-outline-primary" style="float: left;">Yeni Hakkımızda Yazısı Ekle</a>
                <br /><br />
            </div>
        </div>
    </div>
</div>
