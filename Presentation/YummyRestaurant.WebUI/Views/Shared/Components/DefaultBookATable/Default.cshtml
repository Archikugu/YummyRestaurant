<section id="book-a-table" class="book-a-table section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Rezervasyon Yap</h2>
        <p><span>Bizimle</span> <span class="description-title">Yerini Ayırt<br></span></p>
    </div><!-- End Section Title -->

    <div class="container">

        <div class="row g-0" data-aos="fade-up" data-aos-delay="100">

            <div class="col-lg-4 reservation-img" style="background-image: url(/Yummy/assets/img/reservation.jpg);"></div>

            <div class="col-lg-8 d-flex align-items-center reservation-form-bg" data-aos="fade-up" data-aos-delay="200">
                <form action="/Home/BookTable" method="post" role="form" class="p-4">
                    <div class="row gy-4">
                        <div class="col-lg-4 col-md-6">
                            <input type="text" name="FirstName" class="form-control" id="name" placeholder="Adınız" required="">
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <input type="text" name="LastName" class="form-control" id="surname" placeholder="Soyadınız" required="">
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <input type="email" class="form-control" name="Email" id="email" placeholder="Email Adresiniz" required="">
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <input type="text" class="form-control" name="PhoneNumber" id="phone" placeholder="Telefon" required="">
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <input type="date" name="ReservationDate" class="form-control" id="date" placeholder="Tarih" required="">
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <input type="time" class="form-control" name="ReservationTime" id="time" placeholder="Saat" required="">
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <input type="number" class="form-control" name="PersonCount" id="people" placeholder="Kişi Sayısı" required="">
                        </div>
                    </div>

                    <div class="form-group mt-3">
                        <textarea class="form-control" name="Message" rows="5" placeholder="Mesajınız"></textarea>
                    </div>

                    <div class="text-center mt-3">
                        <button type="submit" class="btn btn-danger" style="background-color: #ce1212; border: 0; padding: 10px 40px; color: #fff; transition: 0.4s; border-radius: 50px;">Rezervasyon Yap</button>
                    </div>
                </form>
            </div><!-- End Reservation Form -->

        </div>

    </div>

</section>
