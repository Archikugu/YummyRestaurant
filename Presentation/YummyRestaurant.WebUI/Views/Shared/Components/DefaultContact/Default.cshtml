@using YummyRestaurant.Application.DTOs.ContactDTOs
@model ResultContactDto

<section id="contact" class="contact section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>İletişim</h2>
        <p><span>Yardıma mı İhtiyacınız Var?</span> <span class="description-title">Bize Ulaşın</span></p>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        @if(Model != null)
        {
             <div class="mb-5">
            <iframe style="width: 100%; height: 400px;" src="@Model.MapUrl" frameborder="0" allowfullscreen=""></iframe>
        </div><!-- End Google Maps -->

        <div class="row gy-4">

            <div class="col-md-6">
                <div class="info-item d-flex align-items-center" data-aos="fade-up" data-aos-delay="200">
                    <i class="icon bi bi-geo-alt flex-shrink-0"></i>
                    <div>
                        <h3>Adres</h3>
                        <p>@Model.Location</p>
                    </div>
                </div>
            </div><!-- End Info Item -->

            <div class="col-md-6">
                <div class="info-item d-flex align-items-center" data-aos="fade-up" data-aos-delay="300">
                    <i class="icon bi bi-telephone flex-shrink-0"></i>
                    <div>
                        <h3>Bizi Arayın</h3>
                        <p>@Model.PhoneNumber</p>
                    </div>
                </div>
            </div><!-- End Info Item -->

            <div class="col-md-6">
                <div class="info-item d-flex align-items-center" data-aos="fade-up" data-aos-delay="400">
                    <i class="icon bi bi-envelope flex-shrink-0"></i>
                    <div>
                        <h3>E-Posta Gönderin</h3>
                        <p>@Model.Email</p>
                    </div>
                </div>
            </div><!-- End Info Item -->

            <div class="col-md-6">
                <div class="info-item d-flex align-items-center" data-aos="fade-up" data-aos-delay="500">
                    <i class="icon bi bi-clock flex-shrink-0"></i>
                    <div>
                        <h3>Çalışma Saatleri<br></h3>
                        <p>@Html.Raw(Model.OpeningHours)</p>
                    </div>
                </div>
            </div><!-- End Info Item -->

        </div>
        }

        <div class="mt-5">
            @await Component.InvokeAsync("DefaultMessage")
        </div>

    </div>

</section>
